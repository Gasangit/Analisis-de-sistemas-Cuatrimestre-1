import javax.swing.JOptionPane;

class Ej4_selector {

	public static void main(String[] args) {
		String producto, tipo;
		int cantidad;
		double costo, valor, descuento;
		
		producto = JOptionPane.showInputDialog("Ingrese producto A o B");
		cantidad = Integer.parseInt(JOptionPane.showInputDialog("Ingresar la cantidad a comprar"));
		
		producto = producto.toLowerCase();
		
		switch (producto) {
		case "a":
					tipo = JOptionPane.showInputDialog("Ingrese el tipo de producto: \n"
													  +"A - Primavera / Marino / Otoño");
					tipo = tipo.toLowerCase();
					
					switch (tipo) {
					case "primavera":
							costo = 1.5;
						break;
					case "Marino":
							costo = 1.55;
						break;
					case "Otoño":
							costo = 1.6;
						break;	

					default: JOptionPane.showMessageDialog(null, "El producto A solo puede ser de\n"
															   + "tipo Primavera, Marino u Otoño");
					
						break;
					}
		break;
		case "b":
					tipo = JOptionPane.showInputDialog("Ingrese el tipo de producto: \n"
					  +"A - Primavera / Marino / Otoño");
					tipo = tipo.toLowerCase();

					switch (tipo) {
					case "primavera":
							costo = 1.5;
						break;
					case "Marino":
							costo = 1.55;
						break;
					case "Otoño":
							costo = 1.6;
						break;	

default: JOptionPane.showMessageDialog(null, "El producto A solo puede ser de\n"
							   + "tipo Primavera, Marino u Otoño");

break;
}
		break;	

		default: JOptionPane.showMessageDialog(null, "Solo existen productos de tipo A y B");
		break;
		}
		

	}

}
